<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_improve"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="38dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textColor="#c21616"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="修改" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textColor="#c21616"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="删除" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/relativeLayout">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/databinding_img" />

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/iv"
                android:textColor="@color/txt_color"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="商品名" />
            <!--android:text="@{goods.gName}"-->

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_goods_name"
                android:layout_alignStart="@+id/tv_goods_name"
                android:layout_below="@+id/tv_goods_name"
                android:maxLines="2"
                android:textColor="#888888"
                android:textSize="12sp"
                tools:text="这是很长很长的商品介绍" />

            <!--android:text='@{goods.intro}'-->

            <TextView
                android:id="@+id/tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_content"
                android:layout_alignStart="@+id/tv_content"
                android:layout_below="@+id/tv_content"
                android:text='分类'
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                tools:text="PM 11:28" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/tv_content"
                android:layout_marginBottom="17dp"
                android:textColor="@color/txt_color"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="¥ 12" />

            <!--android:text='@{"¥ " + goods.price}'-->
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="78dp"
            tools:text="已被订购" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
